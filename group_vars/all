---
## configure grafana
grafana_security:
  admin_user: admin
  admin_password: 1234
grafana_datasources:
  - name: "Prometheus"
    type: "prometheus"
    access: "direct"
    url: "http://127.0.0.1:9090"
    basicAuth: false
    isDefault: true

## configure prometheus
prometheus_external_labels:
  monitoring: a
prometheus_targets:
- targets:
  - 127.0.0.1:9126
  labels:
    env: localhost
    job: node
prometheus_alertmanager_config:
  - scheme: http
    path_prefix: /alertmanager
    basic_auth:
      username: user
      password: pass
    static_configs:
      - targets: ["127.0.0.1:9093"]

# configure alertmanager
